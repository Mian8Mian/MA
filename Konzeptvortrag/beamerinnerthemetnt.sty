% Title page: tnt

\defbeamertemplate*{title page}{tnt}[1][]
{
  \thispagestyle{empty}
  {%
    \begin{textblock}{0}(0,0)
      \pgfuseimage{tnttitlepage}
    \end{textblock}
  }
    \begin{columns}
      \column[]{0.03\linewidth}
      \column[t]{0.7\linewidth} \vfill
      \vskip4em\par
      \begin{beamercolorbox}[sep=8pt,flushleft,#1]{title}
        \usebeamerfont{title}\inserttitle\par%
        \ifx\insertsubtitle\@empty%
        \else%
        \vskip0.25em%


        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
        \fi%
      \end{beamercolorbox}%
      \vskip1em\par
      \begin{beamercolorbox}[sep=8pt,flushleft,#1]{author}
        \usebeamerfont{author}\insertauthor
      \end{beamercolorbox}
      \begin{beamercolorbox}[sep=8pt,flushleft,#1]{institute}
        \usebeamerfont{institute}\insertinstitute
      \end{beamercolorbox}
      \begin{beamercolorbox}[sep=8pt,flushleft,#1]{date}
        \usebeamerfont{date}\insertdate
      \end{beamercolorbox}%
      \vfill 
      \column[]{0.27\linewidth}
    \end{columns}
}



